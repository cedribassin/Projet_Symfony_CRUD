<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/pulse/bootstrap.min.css">
        <link rel="stylesheet" href="{{asset('css/styles.css')}}">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="{{path('aliments')}}">Recette.com</a>
            <div class="collapse navbar-collapse" id="navbarColor01">
              <ul class="navbar-nav mr-auto">
                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Aliments</a>
                      <div class="dropdown-menu">
                          <a class="dropdown-item" href="{{path('aliments')}}">Aliments</a>
                          {% if app.user %}
                            <a class="dropdown-item" href="{{path('admin_admin_aliments')}}">Administration aliments</a>
                          {% endif %}
                        </div>
                  </li>
                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Types</a>
                      <div class="dropdown-menu">
                          <a class="dropdown-item" href="{{path('types')}}">Types</a>
                          {% if app.user %}
                            <a class="dropdown-item" href="{{path('admin_admin_types')}}">Administration type d'aliments</a>
                          {% endif %}
                        </div>
                  </li>
                  {% if not app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('inscription')}}">Inscription</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('connexion')}}">Connexion</a>
                    </li>
                  {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('deconnexion')}}">Deconnexion</a>
                    </li>
                  {% endif %}
              </ul>
          </nav>
        <h1 class="mx-2">{% block monTitre %}{% endblock %}</h1>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    </body>
</html>
